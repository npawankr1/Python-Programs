n=int(input())

for i in range(1,n//2+1):
    for spaces in range (1,n//2-i+2):
        print(" ", end="")
    for j in range (1,2*i):
        print("*",end="")
    print()
    

for k in range(n//2+1,0,-1) :
    for spaces in range (1,n//2-k+2):
        print(" ", end="")
    for j in range (1,2*k):
        print("*",end="")

    print()
    
