n=int(input())
i=1
while i<=n:
    s=1
    while s<=n-i:
        print(" ",end="")
        s=s+1    
    j=1
    p=0
    while j<=i:
        print(i-p, end="")
        j=j+1
        p=p+1
    if i>1:
        p=2
        while p<=i:
            print(p,end="")
            p=p+1
    print()
    i=i+1
